<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lrback"
    tools:context=".HelpActivity">

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="680dp"
        android:background="@drawable/regcardin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loginanim"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/contactanimlottie" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Contact -"
            android:textAlignment="center"
            android:textColor="#476AFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="390dp"
            android:fontFamily="@font/poppins_light"
            android:text="+91 8423871451\n+91 9628128323\nwww.ecellrgpv.com"
            android:textAlignment="center"
            android:textColor="#0FDD85"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="530dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Email Us At -"
            android:textAlignment="center"
            android:textColor="#476AFF"
            android:textSize="24sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/emailtextsupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="570dp"
            android:fontFamily="@font/poppins_light"
            android:text="support@ecellrgpv.com"
            android:textAlignment="center"
            android:textColor="#0FDD85"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>